{
    "name": "Ruby on Rails",
    "image": "mcr.microsoft.com/vscode/devcontainers/ruby:3",
    //"dockerFile": "Dockerfile",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "postCreateCommand": "bundle install",
    "customizations": {
